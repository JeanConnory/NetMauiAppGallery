<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.CommunityMaui.MidiaElementPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MidiaElementPage">
    <VerticalStackLayout>
        <toolkit:MediaElement
            x:Name="Player"
            HeightRequest="460"
            ShouldAutoPlay="True"
            ShouldLoopPlayback="True"
            ShouldShowPlaybackControls="True"
            Source="https://static.videezy.com/system/resources/previews/000/038/090/original/guitar_string4.mp4"
            WidthRequest="410" />

        <Button Clicked="OnClickedToPlay" Text="Play" />
    </VerticalStackLayout>
</ContentPage>