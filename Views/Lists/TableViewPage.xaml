<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Lists.TableViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TableViewPage">
    <VerticalStackLayout>
        <TableView HasUnevenRows="True" Intent="Settings">
            <TableRoot>
                <TableSection Title="Segurança">
                    <EntryCell Label="Proteger o APP Com Senha" />
                </TableSection>
                <TableSection Title="Backup">
                    <SwitchCell Text="Habilitar backup" />
                    <SwitchCell Text="Habilitar backup diário" />
                    <SwitchCell Text="Habilitar backup semanal" />
                    <SwitchCell Text="Habilitar backup mensal" />
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>