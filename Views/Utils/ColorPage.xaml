<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Utils.ColorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ColorPage">
    <VerticalStackLayout>
        <Label
            BackgroundColor="#FF9900"
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />

        <Border Margin="20" Padding="20">
            <Border.Background>
                <SolidColorBrush Color="Aqua" />
            </Border.Background>
            <Label Text="Olá Brush!" TextColor="Black" />
        </Border>

        <Border
            Margin="20"
            Padding="20"
            HeightRequest="300"
            WidthRequest="300">
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Offset="0.1" Color="#00C2FF" />
                    <GradientStop Offset="1.0" Color="#A1E880" />
                </LinearGradientBrush>
            </Border.Background>
            <Label Text="Olá Brush!" TextColor="Black" />
        </Border>

        <Border
            Margin="20"
            Padding="20"
            HeightRequest="300"
            WidthRequest="300">
            <Border.Background>
                <RadialGradientBrush Center="0.5, 0.5" Radius="0.5">
                    <GradientStop Offset="1.0" Color="#A1E880" />
                    <GradientStop Offset="0.5" Color="#00C2FF" />
                    <GradientStop Offset="0.3" Color="Red" />
                </RadialGradientBrush>
            </Border.Background>
            <Label Text="Olá Brush!" TextColor="Black" />
        </Border>
    </VerticalStackLayout>
</ContentPage>