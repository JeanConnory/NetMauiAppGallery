<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Components.Forms.PickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PickerPage">
    <VerticalStackLayout Padding="50">
        <Picker
            Title="Marcas"
            SelectedIndexChanged="Picker_SelectedIndexChanged"
            TitleColor="Red">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>FIAT</x:String>
                    <x:String>Volkswagem</x:String>
                    <x:String>Chevrolet</x:String>
                    <x:String>Renault</x:String>
                    <x:String>Peugeot</x:String>
                    <x:String>Jeep</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label x:Name="lblValue" />
    </VerticalStackLayout>
</ContentPage>